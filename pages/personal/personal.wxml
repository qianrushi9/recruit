<!--pages/personal/personal.wxml-->
<view class='personal-container r-center'>
    <image class='personal-img' src='{{userInfo.avatarUrl}}'></image>
    <text class='personal-name'>{{userInfo.nickName}}</text>
</view>

<gray-line></gray-line>

<view class='personal-item' bindtap='onJumpMyInformation' hidden="true"  >
    <image class='personal-item-img' src='/images/personal-info.png'></image>
    <text class='personal-item-text' >我的信息</text>
    <image class='personal-item-right' src='/images/right.png'></image>
</view>
<view class='personal-item' bindtap='onJumpMyCompanyInfo' >
    <image class='personal-item-img' src='/images/personal-info.png'></image>
    <text class='personal-item-text' >企业信息</text>
    <image class='personal-item-right' src='/images/right.png'></image>
</view>
