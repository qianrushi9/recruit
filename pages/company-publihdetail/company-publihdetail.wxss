/* pages/login/login.wxss */

.parent {
  background: #f7f7f7;
  height: 100vh;
}

.rows {
  display: flex;
  flex-direction: column;
  /* margin-left:50rpx;
    margin-right: 50rpx; *//* margin-top:10rpx; */
}

.item {
  display: flex;
  bottom: 0;
  flex-wrap: nowrap;
  margin-top: 20rpx;
  /* margin-left:20rpx; */
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background: white;
  /* align-items: center; */
  justify-content: center;
  flex-direction: column;
}

.item-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-right {
  width: 30rpx;
  height: 30rpx;
  margin: auto 0;
  position: absolute;
  right: 10px;
}

.item-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 0rpx rgb(211, 207, 207) solid;
}

.radius_l {
  border-radius: 10rpx;
}

.highlight {
  background: rgb(130, 177, 240);
}

.normal {
  background: white;
}

.personal-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50px;
}

view {
  margin-top: 10rpx;
}

.personal-description {
  font-size: 25rpx;
  margin-top: 10rpx;
  letter-spacing: 2rpx;
  line-height: 180%;
}
.modify {
  font-size: 26rpx;color:#cc3333
}

.txt-l {
  font-size:24rpx;
}